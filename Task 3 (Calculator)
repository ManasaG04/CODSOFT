  <script>
    const display = document.getElementById('display');
    function appendValue(value) {
      // If display is "0" or previously errored out, reset it first
      if (display.value === "0" || display.value === "Error") {
        display.value = value;
      } else {
        display.value += value;
      }
    }
    function clearDisplay() {
      display.value = "0";
    }
    function deleteLast() {
      // Using slice because it's simple and readable (even though we could substring)
      display.value = display.value.slice(0, -1) || "0";
    }
    function calculate() {
      try {
        let exp = display.value.replace(/Ã·/g, "/").replace(/Ã—/g, "*");
        let result = eval(exp);  // I know eval isnâ€™t ideal, but for a demo calculator, it works fine

        // Prevent weird outputs like Infinity or NaN
        if (result === Infinity || isNaN(result)) {
          display.value = "Error";
        } else {
          // Limit precision to avoid super long decimals
          display.value = parseFloat(result.toFixed(10)).toString();
        }

      } catch (err) {
        display.value = "Error";
      }
    }
  </script>
