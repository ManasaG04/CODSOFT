<script>
let slides = document.querySelectorAll(".section");
function switchSlide(index) {
  slides.forEach((s, i) => {
    s.classList.remove("active", "left", "hidden");
    if (i < index) s.classList.add("left");
    else if (i > index) s.classList.add("hidden");
    else s.classList.add("active");
  });
}
</script>
